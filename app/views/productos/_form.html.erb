        <div id="error_explanation">
            <h2>
                <%= pluralize(@producto.errors.count, "error") %> prohibited this producto from being saved:
            </h2>
            <ul>
                <% @producto.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
