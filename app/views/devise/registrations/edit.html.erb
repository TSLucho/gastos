<div class="col-md-12 text-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="col-md-12 col-sm-12 col-xs-12">
      <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "Nombre de Usuario" %>
    </div>
    <div class="col-md-12 col-sm-12 col-xs-12">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Correo" %>
    </div>
    <div class="col-md-12 col-sm-12 col-xs-12">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Nueva Contrase単a" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> Caracteres Minimo</em><i>(Deja los campos en blanco sino quieres cambiar la Contrase単a)</i>
      <% end %>
    </div>
    <div class="col-md-12 col-sm-12 col-xs-12">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Repetir Nueva Contrase単a" %>
    </div>
    <div class="col-md-12 col-sm-12 col-xs-12">
    <i>Necesitamos tu contrase単a Actual para confirmar el Cambio</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
    <div class="col-md-12 col-sm-12 col-xs-12">
      <%= f.submit "Actualizar", :class => 'btn btn-primary boton-login' %>
    </div>
  <% end %>
</div>
  <br>
  <h3>Borrar mi Cuenta</h3>
  <div class="col-md-6">
    <%= button_to "Borrar", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => 'btn btn-danger btn-lg' %>
  </div>
  <div class="col-md-6">
    <%= link_to "Back", registros_path, :class => 'pull-right btn btn-info btn-lg' %>
  </div>
